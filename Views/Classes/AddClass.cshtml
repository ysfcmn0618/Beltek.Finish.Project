@model Class

@{
    ViewData["Title"] = "Sınıf Ekle";
}

<h1>Yeni Sınıf Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddClass" asp-asp-controller="Classes" method="post" form-name="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Sınıf Adı</label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kontenjan</label>
                <input asp-for="ClassQuota" class="form-control" />
                <span asp-validation-for="ClassQuota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye geri dön</a>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />       
    }
}