@model Student

@{
    ViewData["Title"] = "Sil";
}

<h1>Delete</h1>

<h3>Bu öğrenciyi silmek istediğinize EMİN MİSİNİZ?</h3>
<div>
    <h4>Öğrenci</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Öğrenci Adı
        </dt>
        <dd class = "col-sm-10">
            @Model.StudentName
        </dd>
        <dt class = "col-sm-2">
            Öğrenci Soyadı
        </dt>
        <dd class = "col-sm-10">
            @Model.StudentSurname
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class.ClassName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
