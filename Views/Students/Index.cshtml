@model IEnumerable<Student>

@{
    ViewData["Title"] = "Öğrenciler";
    ViewData["Description"] = "Öğrenci işleri Anasayfa";
}

<h1>Öğrenciler</h1>

<p>
    <a asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Numara</th>
            <th>Sınıf</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.StudentName
                    </td>
                    <td>
                        @item.StudentSurname
                    </td>
                    <td>
                        @item.StudentNumber
                    </td>
                    <td>
                        @item.Class.ClassName
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td>Henüz Öğrenci Girişi Yapılmamış</td>
                <td><a asp-action="Create">İlk Öğrencinizi Ekleyin</a></td>
            </tr>
        }

    </tbody>
</table>
